FROM python:3.8
WORKDIR /usr/local/lib/python3.8/site-packages
RUN apt-get update
RUN apt-get install -y git
RUN git clone https://github.com/networktocode/ntc-templates.git
RUN mv ntc-templates ntc_templates
RUN pip3 install --upgrade pip
ADD netpalm/requirements.txt /code/
RUN pip3 install -r /code/requirements.txt
ADD . /code
WORKDIR /code
CMD gunicorn -c gunicorn.conf.py netpalm.netpalm_controller:app
